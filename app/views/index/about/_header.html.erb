<header class="about-header" id="about-header">
  <figure>
    <%= image_tag("logos/#{locale}/mokka-orange.svg", alt: t(:logo_alt)) %>
  </figure>
  <h1><%= t('.heading') %></h1>
  <p class="lead">
    <%= raw t('.lead_a') %><br/>
    <%= raw t('.lead_b') %>

  </p>
  <% if params[:a].blank? %>
    <div class="cta">
      <%= link_to(t(:register_in_two_clicks), '#register-form', class: 'button-link') %>
    </div>
  <% end %>
</header>
